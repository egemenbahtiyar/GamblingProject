@{
    Layout = "_Layout";
}
@model GamblingProject.ViewModels.AssetViewModel
<div class="header">
    <h2 style="font-size: 200%">ASSETS</h2>
</div>

<div class="row">
    <div class="columnA">
        <h2>42 BET</h2>
        <ul class="page-list">
            <li>
                <a class="page-list-item" href="/Home/Index">
                    <h2>Home</h2>
                </a>
            </li>
            <li>
                <a class="page-list-item" href="/Home/Assets">
                    <h2>Assets</h2>
                </a>
